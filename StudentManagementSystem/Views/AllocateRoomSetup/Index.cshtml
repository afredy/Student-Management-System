



@{
    ViewBag.Title = "Index";
}


<fieldset>
    <legend class=" text-center ">Allocate Classroom</legend>
    <div class="form-horizontal">
        <div class="box-body col-md-offset-2">
            <div class="form-group hidden">
                <div class="col-md-4">
                    <input type="text" class="form-control" id="ClassId" name="ClassId" value="0">
                </div>
            </div>
            <div class="form-group ">

                <div class="form-group ">
                    <label for="DepartmentId" class="col-md-3 control-label required">Department :</label>
                    <div class="col-md-3">
                        <select class="form-control" id="DepartmentId" name="DepartmentId"></select>
                    </div>
                </div>
            </div>
            <div class="form-group ">
                <label for="CourseId" class="col-md-3 control-label required">Course :</label>
                <div class="col-md-3">
                    <select class="form-control" id="CourseId" name="CourseId"></select>
                </div>
            </div>
            <div class="form-group ">
                <label for="RoomId" class="col-md-3 control-label required">Room :</label>
                <div class="col-md-3">
                    <select class="form-control" id="RoomId" name="RoomId"></select>
                </div>
            </div>
            <div class="form-group ">
                <label for="DayId" class="col-md-3 control-label required">Day :</label>
                <div class="col-md-3">
                    <select class="form-control" id="DayId" name="DayId"></select>
                </div>
            </div>
            <div class="form-group ">
                <label for="From" class="col-md-3 control-label required">From</label>
                <div class="col-md-3">
                    <input type="text" class="form-control" id="From" name="From" >
                </div>
            </div>
            <div class="form-group ">
                <label for="To" class="col-md-3 control-label required">To</label>
                <div class="col-md-3">
                    <input type="text" class="form-control" id="To" name="To" >
                </div>
            </div>
           
            
            <div class="form-group ">

                <div class="form-group ">
                    <div class="col-md-1 col-md-offset-3">
                        <input type="button" class="form-control btn btn-primary btn-block" id="btnSave" value="Save">
                    </div>
                    <div class="col-md-1">
                        <input type="button" class="form-control btn btn-warning btn-block" id="btnClear" value="Clear">
                    </div>
                </div>

            </div>
</fieldset>




@section scripts {
    <script src="~/js/AllocateClassroom.js"></script>
    <script type="text/javascript">
        AllocateClassroomSetup.init();
    </script>
}



