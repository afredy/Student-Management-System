
@{
    ViewBag.Title = "Index";
}

<fieldset>
    <legend class=""></legend>
    <div class="form-horizontal">
        <div class="box-body col-md-offset-2">
            <div class="form-group hidden">
                <div class="col-md-4">
                    <input type="text" class="form-control" id="DepartmentId" name="DepartmentId" value="0">
                </div>
            </div>
            <div class="form-group ">
                <label for="DepartmentCode" class="col-md-3 control-label required">Department Code</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="DepartmentCode" name="DepartmentCode">
                </div>
            </div>
            <div class="form-group ">
                <label for="DepartmentName" class="col-md-3 control-label required">Department Name</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="DepartmentName" name="DepartmentName">
                </div>
            </div>
            

            <div class="form-group ">
                <div class="col-md-1 col-md-offset-3">
                    <input type="button" class="form-control btn btn-success btn-block" id="btnSave" value="Save">
                </div>
                <div class="col-md-1">
                    <input type="button" class="form-control btn btn-warning btn-block" id="btnClear" value="Clear">
                </div>
            </div>
        </div>
    </div>
</fieldset>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Department List</h3>
                <span class="pull-right clickable"><i class="fa fa-angle-double-up"></i></span>
            </div>
            <div class="panel-body">
                <div id="div-list">
                    <table id="DepartmentTable">
                        <thead>
                            <tr>
                                <th>Department ID</th>
                                <th>Department Code</th>
                                <th>Department Name</th>
                                <th>Action</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {

 <script src="~/js/department.js"></script>
  
 <script type="text/javascript">
    Departmentsetup.init();
 </script>
}
