
@{
    ViewBag.Title = "Index";
}


<fieldset>
    <legend class=" text-center ">Teacher Setup</legend>
    <div class="form-horizontal">
        <div class="box-body col-md-offset-2">
            <div class="form-group hidden">
                <div class="col-md-4">
                    <input type="text" class="form-control" id="TeacherId" name="TeacherId" value="0">
                </div>
            </div>
            <div class="form-group ">
                <label for="TeacherName" class="col-md-3 control-label required">Name</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="TeacherName" name="TeacherName">
                </div>
            </div>
            <div class="form-group ">
                <label for="TeacherAddress" class="col-md-3 control-label required">Address</label>
                <div class="col-md-4">
                    <textarea type="text" class="form-control" id="TeacherAddress" name="TeacherAddress"></textarea>
                </div>
            </div>
            <div class="form-group ">
                <label for="TeacherEmail" class="col-md-3 control-label required">Email</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="TeacherEmail" name="TeacherEmail">
                </div>
            </div>
            <div class="form-group ">
                <label for="TeacherContactNo" class="col-md-3 control-label required">Contact No</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="TeacherContactNo" name="TeacherContactNo">
                </div>
            </div>

            <div class="form-group ">
                <div class="form-group ">
                    <label for="DesignationId" class="col-md-3 control-label required">Teacher Designation</label>
                    <div class="col-md-3">
                        <select class="form-control" id="DesignationId" name="DesignationId"></select>
                    </div>
                </div>

                <div class="form-group ">
                    <label for="DepartmentId" class="col-md-3 control-label required">Department</label>
                    <div class="col-md-3">
                        <select class="form-control" id="DepartmentId" name="DepartmentId"></select>
                    </div>

                </div>


                <div class="form-group ">
                    <label for="TeacherCredit" class="col-md-3 control-label required">Contact To Be Taken</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" id="TeacherCredit" name="TeacherCredit">
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-md-1 col-md-offset-3">
                        <input type="button" class="form-control btn btn-facebook btn-block" id="btnSave" value="Save">
                    </div>
                    <div class="col-md-1">
                        <input type="button" class="form-control btn btn-warning btn-block" id="btnClear" value="Clear">
                    </div>
                </div>

            </div>
</fieldset>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Teacher List</h3>
                <span class="pull-right clickable"><i class="fa fa-angle-double-up"></i></span>
            </div>
            <div class="panel-body">
                <div id="div-list">
                    <table id="TeacherTable">
                        <thead>
                            <tr>

                                <th>Teacher ID</th>
                                <th>Teacher Name</th>
                                <th>Teacher Address</th>
                                <th>Teacher Email</th>
                                <th>Teacher Contact</th>
                                <th>Designation</th>
                                <th>Department</th>
                                <th>Credit</th>
                                <th>Action</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script src="~/js/teacher.js"></script>
    <script type="text/javascript">
        TeacherSetup.init();
    </script>
}




