
@{
    ViewBag.Title = "Index";
}


<fieldset>
    <legend class=" text-center ">Course Setup</legend>
    <div class="form-horizontal">
        <div class="box-body col-md-offset-2">
            <div class="form-group hidden">
                <div class="col-md-4">
                    <input type="text" class="form-control" id="CourseId" name="CourseId" value="0">
                </div>
            </div>
            <div class="form-group ">
                <label for="CourseCode" class="col-md-3 control-label required">Course Code</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="CourseCode" name="CourseCode">
                </div>
            </div>
            <div class="form-group ">
                <label for="CourseName" class="col-md-3 control-label required">Course Name</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="CourseName" name="CourseName">
                </div>
            </div>
            <div class="form-group ">
                <label for="CourseCredit" class="col-md-3 control-label required">Course Credit</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="CourseCredit" name="CourseCredit">
                </div>
            </div>
            <div class="form-group ">
                <label for="Discription" class="col-md-3 control-label required">Description</label>
                <div class="col-md-4">
                    <textarea type="text" class="form-control" id="Discription" name="Discription"></textarea>
                </div>
            </div>
            <div class="form-group ">
                <label for="DepartmentId" class="col-md-3 control-label required">Department</label>
                <div class="col-md-3">
                    <select class="form-control" id="DepartmentId" name="DepartmentId"></select>
                </div>

            </div>
            <div class="form-group ">
                <div class="form-group ">
                    <label for="SemesterId" class="col-md-3 control-label required">Semester</label>
                    <div class="col-md-3">
                        <select class="form-control" id="SemesterId" name="SemesterId"></select>
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-md-1 col-md-offset-3">
                        <input type="button" class="form-control btn btn-facebook btn-block" id="btnSave" value="Save">
                    </div>
                    <div class="col-md-1">
                        <input type="button" class="form-control btn btn-warning btn-block" id="btnClear" value="Clear">
                    </div>
                </div>

            </div>
</fieldset>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Course List</h3>
                <span class="pull-right clickable"><i class="fa fa-angle-double-up"></i></span>
            </div>
            <div class="panel-body">
                <div id="div-list">
                    <table id="CourseTable">
                        <thead>
                            <tr>
                                <th>Course ID</th>
                                <th>Course Code</th>
                                <th>Course Name</th>
                                <th>Course Credit</th>
                                <th>Description</th>
                                <th>Department</th>
                                <th>Semester</th>
                                <th>Action</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {
<script src="~/js/course.js"></script>
    <script type="text/javascript">
        CourseSetup.init();
    </script>
}




