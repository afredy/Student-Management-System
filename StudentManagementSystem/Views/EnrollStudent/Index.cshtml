
@{
    ViewBag.Title = "Index";
}

<fieldset>
    <legend class=" text-center ">Enroll Student</legend>
    <div class="form-horizontal">
        <div class="box-body col-md-offset-2">
            <div class="form-group hidden">
                <div class="col-md-3">
                    <input type="text" class="form-control" id="EnrollStudentId" name="EnrollStudentId" value="0">
                </div>
            </div>
            <div class="form-group ">
                <label for="RegId" class="col-md-3 control-label required">Student Reg No : </label>
                <div class="col-md-3">
                    <select type="text" class="form-control" id="RegId" name="RegId"></select>
                </div>
            </div>
            <div class="form-group ">
                <label for="StudentName" class="col-md-3 control-label required">Student Name :</label>
                <div class="col-md-3">
                    <input type="text" class="form-control" id="StudentName" name="StudentName" disabled>

                </div>
            </div>
            <div class="form-group ">
                <label for="Email" class="col-md-3 control-label required">Student Email : </label>
                <div class="col-md-3">
                    <input type="text" class="form-control" id="Email" name="Email" disabled>
                </div>
            </div>

            <div class="form-group ">

                <div class="form-group ">
                    <label for="DepartmentId" class="col-md-3 control-label required">Department :</label>
                    <div class="col-md-3">
                        <input class="form-control" id="DepartmentId" name="DepartmentId" disabled/>
                    </div>
                </div>
            </div>

            <div class="form-group ">
                <label for="SemesterId" class="col-md-3 control-label required">Select Semester:</label>
                <div class="col-md-3">
                    <select type="text" class="form-control" id="SemesterId" name="SemesterId"></select>
                </div>
            </div>
            <div class="form-group ">
                <label for="CourseId" class="col-md-3 control-label required">Select Course:</label>
                <div class="col-md-3">
                    <select type="text" class="form-control" id="CourseId" name="CourseId"></select>
                </div>
            </div>
            <div class="form-group ">
                <label for="Date" class="col-md-3 control-label required">Date :</label>
                <div class="col-md-3">
                    <div class="input-group date datepicker-do-not-allow-futureDate" data-provide="datepicker">
                        <input type="text" class="form-control datepicker" id="Date" name="Date" readonly="readonly" />
                        <div class="input-group-addon">
                            <span class="fa fa-calendar"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group ">

                <div class="form-group ">
                    <div class="col-md-1 col-md-offset-3">
                        <input type="button" class="form-control btn btn-primary btn-block" id="btnSave" value="Save">
                    </div>
                    <div class="col-md-1">
                        <input type="button" class="form-control btn btn-warning btn-block" id="btnClear" value="Clear">
                    </div>
                </div>

            </div>
</fieldset>





@section scripts {
<script src="~/js/EnrollStudent.js"></script>
    <script type="text/javascript">
        EnrollStudentSetup.init();
    </script>
}
