
@{
    ViewBag.Title = "Index";
}


<fieldset>
    <legend class=" text-center ">Register Student</legend>
    <div class="form-horizontal">
        <div class="box-body col-md-offset-2">
            <div class="form-group hidden">
                <div class="col-md-3">
                    <input type="text" class="form-control" id="StudentId" name="StudentId" value="0">
                </div>
            </div>
           
            <div class="form-group ">
                <label for="StudentName" class="col-md-3 control-label required">Student Name :</label>
                <div class="col-md-3">
                    <input type="text" class="form-control" id="StudentName" name="StudentName">
                     
                </div>
            </div>
            <div class="form-group ">
                <label for="Email" class="col-md-3 control-label required">Student Email : </label>
                <div class="col-md-3">
                    <input type="text" class="form-control" id="Email" name="Email" >
                </div>
            </div>
            <div class="form-group ">
                <label for="RegNo" class="col-md-3 control-label required">Registration No : </label>
                <div class="col-md-3">
                    <input type="text" class="form-control" id="RegNo" name="RegNo">
                </div>
            </div>
            <div class="form-group ">
                <label for="ContactNo" class="col-md-3 control-label required">Contact No :</label>
                <div class="col-md-3">
                    <input type="text" class="form-control" id="ContactNo" name="ContactNo" >
                </div>
            </div>
            
            <div class="form-group ">
                <label for="Date" class="col-md-3 control-label required">Date :</label>
                <div class="col-md-3">
                    <div class="input-group date datepicker-do-not-allow-futureDate" data-provide="datepicker">
                        <input type="text" class="form-control datepicker" id="Date" name="Date" readonly="readonly" />
                        <div class="input-group-addon">
                            <span class="fa fa-calendar"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group ">
                <label for="Address" class="col-md-3 control-label required">Address :</label>
                <div class="col-md-3">
                    <textarea class="form-control" id="Address" name="Address"></textarea>
                </div>
            </div>
 
            <div class="form-group ">

                <div class="form-group ">
                    <label for="DepartmentId" class="col-md-3 control-label required">Department :</label>
                    <div class="col-md-3">
                        <select class="form-control" id="DepartmentId" name="DepartmentId"></select>
                    </div>
                </div>
            </div>
            <div class="form-group ">

                <div class="form-group ">
                    <div class="col-md-1 col-md-offset-3">
                        <input type="button" class="form-control btn btn-primary btn-block" id="btnSave" value="Save">
                    </div>
                    <div class="col-md-1">
                        <input type="button" class="form-control btn btn-warning btn-block" id="btnClear" value="Clear">
                    </div>
                </div>

            </div>
</fieldset>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Registered Stuudent List</h3>
                <span class="pull-right clickable"><i class="fa fa-angle-double-up"></i></span>
            </div>

            <div class="panel-body">

                <div id="div-list">
                    <table id="RegisterStudentTable">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Reg No</th>
                                <th>Contact No</th>
                                <th>Address</th>
                                <th>Department</th>
                                <th>Date</th>
                                <th>Action</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
<script src="~/js/RegisterStudent.js"></script>
    <script type="text/javascript">
        RegisterStudentSetup.init();
    </script>
}








